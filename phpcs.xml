<?xml version="1.0"?>
<ruleset name="CssJs">
    <!-- check all files -->
    <file>.</file>
    <!-- exclude patterns -->
    <exclude-pattern>.idea</exclude-pattern>
    <exclude-pattern>.mvn</exclude-pattern>
    <exclude-pattern>bower_components</exclude-pattern>
    <exclude-pattern>node</exclude-pattern>
    <exclude-pattern>node_modules</exclude-pattern>
    <exclude-pattern>target</exclude-pattern>
    <exclude-pattern>jquery.(js|css)</exclude-pattern>
    <exclude-pattern>materialize.(js|css)</exclude-pattern>

    <!-- default parameters -->
    <arg name="report" value="summary"/>
    <arg name="extensions" value="js,css"/>
    <arg name="report" value="full"/>

</ruleset>
